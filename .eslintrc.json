{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "ecmaFeatures" : {
        "templateStrings": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console" : 0,
        "semi": [
            "error",
            "always"
        ]
    },
    "globals" : {
        "Exceptions" : false
    }
}